// .vscode/tasks.json
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "bun run dev",
			"type": "shell",
			"command": "bun",
			"args": ["run", "dev"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"detail": "Run the frontend and backend development servers",
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "quality-check.sh",
			"type": "shell",
			"command": "./quality-check.sh",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": ["$eslint-compact", "$tsc"],
			"detail": "Run full quality checks (same as CI)",
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "quality-check.sh --staged",
			"type": "shell",
			"command": "./quality-check.sh",
			"args": ["--staged"],
			"group": "test",
			"problemMatcher": ["$eslint-compact", "$tsc"],
			"detail": "Run pre-commit checks on staged files only",
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "bun run i18n:pull",
			"type": "shell",
			"command": "bun",
			"args": ["run", "i18n:pull"],
			"group": "none",
			"problemMatcher": [],
			"detail": "Pull latest translations from Tolgee Cloud",
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "bun run i18n:push",
			"type": "shell",
			"command": "bun",
			"args": ["run", "i18n:push"],
			"group": "none",
			"problemMatcher": [],
			"detail": "Push local translation files to Tolgee Cloud",
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "bun run i18n:cleanup",
			"type": "shell",
			"command": "bun",
			"args": ["run", "i18n:cleanup"],
			"group": "none",
			"problemMatcher": [],
			"detail": "Find deprecated keys and tag them (review in Tolgee Cloud UI after)",
			"presentation": {
				"clear": true
			}
		}
	]
}
