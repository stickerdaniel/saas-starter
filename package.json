		"tailwind-merge": "^3.4",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vaul-svelte": "^1.0.0-next.7",
		"vite": "^7",
		"vitest": "^4.0.0",
		"zod": "^4.1.13"
	}
}
