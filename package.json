		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"rollup-plugin-visualizer": "^6.0.5",
		"svelte": "^5.45",
		"svelte-check": "^4.3.4",
		"svelte-sonner": "^1.0.5",
