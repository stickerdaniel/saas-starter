{
	"name": "saas-starter",
	"version": "0.1.0",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev:frontend": "vite dev --open",
		"dev:backend": "convex dev",
		"dev": "bun run dev:frontend & bun run dev:backend",
		"postinstall": "svelte-kit sync && bun run build:emails",
		"prebuild": "bun run build:emails",
		"build": "vite build",
		"build:emails": "dotenv -e .env.local -- tsx scripts/build-emails.ts",
		"preview": "vite preview",
		"prepare": "husky",
		"package": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "eslint .",
		"quality-check": "bun scripts/quality-check.ts",
		"quality-check:staged": "bun scripts/quality-check.ts --staged",
		"test:e2e": "playwright test",
		"test": "bun run test:e2e && bun run test:unit",
		"test:unit": "vitest --run --reporter=verbose --passWithNoTests",
		"i18n:pull": "dotenv -e .env.local -- tolgee pull",
		"i18n:push": "dotenv -e .env.local -- tolgee push",
		"i18n:cleanup": "dotenv -e .env.local -- tolgee tag --filter-not-extracted --filter-tag production --tag deprecated --untag production",
		"setup:test-user": "tsx scripts/setup-test-user.ts",
		"worktree": "scripts/create-worktree.sh",
		"worktree:setup": "scripts/create-worktree.sh --setup-only"
	},
	"dependencies": {
		"@better-auth/passkey": "^1.4.10",
		"@convex-dev/agent": "^0.3.0",
		"@convex-dev/better-auth": "^0.10.0",
		"@convex-dev/resend": "^0.2.0",
		"@mmailaender/convex-better-auth-svelte": "^0.5.0",
		"@openrouter/ai-sdk-provider": "^1.2.3",
		"@oslojs/crypto": "^1.0.1",
		"@rive-app/canvas": "^2.32.0",
		"@stickerdaniel/convex-autumn-svelte": "^0.1.3",
		"@svelte-put/lockscroll": "^2.0.1",
		"@tolgee/cli": "^2.14.0",
		"@tolgee/svelte": "^6.2.7",
		"@zumer/snapdom": "^2.0.0",
		"ai": "^5.0.93",
		"atmn": "^0.0.30",
		"autumn-js": "^0.1.43",
		"better-auth": "1.4.8",
		"better-svelte-email": "^1.3.0",
		"convex-helpers": "^0.1.108",
		"date-fns": "^4.1.0",
		"isomorphic-dompurify": "^2.32.0",
		"konva": "^10.0.8",
		"marked": "^17.0.0",
		"mode-watcher": "^1.1.0",
		"motion-sv": "^0.1.2",
		"paneforge": "^1.0.2",
		"posthog-js": "^1.290.0",
		"resend": "^6.5.2",
		"runed": "^0.37.0",
		"svelte-infinite": "^0.5.1",
		"svelte-konva": "^1.0.1",
		"svelte-streamdown": "^3.0.0",
		"vercel": "^50.0.0"
	},
	"devDependencies": {
		"@dnd-kit-svelte/core": "^0.0.11",
		"@dnd-kit-svelte/modifiers": "^0.0.11",
		"@dnd-kit-svelte/sortable": "^0.0.11",
		"@dnd-kit-svelte/utilities": "^0.0.11",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.561.0",
		"@playwright/test": "^1.56.0",
		"@sveltejs/adapter-auto": "^7",
		"@sveltejs/kit": "^2.49",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6",
		"@tabler/icons-svelte": "^3.35.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/table-core": "^8.21.3",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"@types/d3-scale": "^4.0.9",
		"@types/d3-shape": "^3.1.7",
		"@types/node": "^25.0.0",
		"@typescript-eslint/eslint-plugin": "^8.46.0",
